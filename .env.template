# BTC Trading System Environment Variables Template
# Copy this file to .env and fill in your values

# Database and Storage Paths (Docker will handle these)
DATABASE_PATH=/app/data/trading_system.db
MODEL_PATH=/app/models
LOG_PATH=/app/logs
CONFIG_PATH=/app/config

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# Discord Notifications (Optional)
# Get webhook URL from Discord server settings -> Integrations -> Webhooks
DISCORD_WEBHOOK_URL=

# Optional API Keys for Enhanced Data
# All have free tiers available

# Federal Reserve Economic Data (https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=

# News API for sentiment analysis (https://newsapi.org/)
NEWS_API_KEY=

# CryptoPanic for crypto news (https://cryptopanic.com/developers/api/)
CRYPTOPANIC_API_KEY=

# Glassnode for on-chain data (https://glassnode.com/)
GLASSNODE_API_KEY=

# Redis Configuration (Optional - for caching)
REDIS_HOST=redis
REDIS_PORT=6379

# Python Environment
PYTHONPATH=/app/src:/app
PYTHONUNBUFFERED=1

# Network Configuration
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1