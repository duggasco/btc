FROM python:3.11-slim

WORKDIR /app

# Install only essential system dependencies
RUN apt-get update && apt-get install -y gcc g++ && rm -rf /var/lib/apt/lists/*

# Copy test requirements first
COPY tests/requirements.txt /tmp/test-requirements.txt
RUN pip install --no-cache-dir -r /tmp/test-requirements.txt

# Install minimal backend dependencies for testing
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn==0.24.0 \
    pydantic==2.5.0 \
    pandas==2.1.3 \
    numpy==1.24.3 \
    requests==2.31.0 \
    websocket-client==1.6.4 \
    python-dateutil==2.8.2 \
    plotly==5.17.0 \
    streamlit==1.31.1

# Copy source and tests
COPY src /app/src
COPY tests /app/tests
COPY pytest.ini /app/
COPY run_tests.py /app/

# Set Python path
ENV PYTHONPATH=/app/src/backend:/app/src/frontend:/app
ENV PYTHONUNBUFFERED=1

# Create necessary directories
RUN mkdir -p /app/storage/data /app/storage/models /app/storage/config /app/storage/logs/backend /app/storage/logs/frontend

WORKDIR /app

# Run unit tests only by default (faster)
CMD ["python", "-m", "pytest", "tests/unit", "-v"]