  },
  "alerts": {
    "price_change_threshold": 0.025,
    "volume_spike_threshold": 2.0,
    "signal_confidence_threshold": 0.8,
    "drawdown_threshold": 0.1,
    "channels": {
      "discord": true,
      "email": false,
      "telegram": false,
      "webhook": true
