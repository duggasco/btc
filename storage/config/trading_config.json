    "monte_carlo": {
      "simulations": 1000,
      "confidence_intervals": [
        0.05,
        0.25,
        0.5,
        0.75,
        0.95
      ]
    },
    "optimization": {
      "method": "bayesian",
      "n_trials": 50,
      "timeout_seconds": 3600,
      "objectives": [
        "sortino_ratio",
        "calmar_ratio"
      ]
